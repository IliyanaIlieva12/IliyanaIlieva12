@model IEnumerable<tattoo.Data.Rezervation>

@{
    ViewData["Title"] = "Index";
}

<h1>Резервации</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tattoos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customers.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tattoos.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Employers.Name)
               @*<img src="@Html.DisplayFor(modelItem => item.Tattoos.ImageURL)" width="100"/>*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
